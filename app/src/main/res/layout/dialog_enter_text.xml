<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etEnterText"
        android:gravity="top|start"
        android:padding="8dp"
        android:layout_margin="@dimen/margin_default"
        android:background="@drawable/back_edit_text"
        android:layout_above="@id/llContainerButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/llContainerButtons"
        android:layout_margin="@dimen/margin_default"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCancelEnterText"
            android:text="@string/cancel"
            style="@style/CustomButton"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSaveEnterText"
            android:text="@string/save"
            style="@style/CustomButton"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>